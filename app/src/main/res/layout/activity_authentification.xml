<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentification"
    android:background="@drawable/background"
    android:fillViewport="true"
    android:isScrollContainer="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/RelativeAuth">
            <ImageButton
                android:id="@+id/ConnectButton"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/logo"
                android:onClick="didTapButton"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/pointCenter"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/pointCenter"
                android:layout_centerInParent="true"/>
            <EditText
                android:id="@+id/editTextAuth"
                android:background="@drawable/roundcorner"
                android:layout_marginTop="35dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Identifiant"
                android:layout_below="@+id/pointCenter"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
</ScrollView>
